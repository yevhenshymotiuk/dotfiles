#!/usr/bin/env bash

function start {
    swaymsg "workspace $2; exec $(which $1)"
}

function start-if-ne {
    if [ "$(pgrep $1)${?}" == 1 ]; then
        start "$1" "$2"
    else
        echo "$1 is already opened"
    fi
}

start-if-ne qutebrowser 1
start-if-ne emacs 2
start-if-ne telegram-desktop 3
start-if-ne alacritty 4
